<!DOCTYPE html>
<html>
	<head>
		<title>AutoWorks</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="CSS/global.css">
		<link rel="stylesheet" href="CSS/offSession.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
	</head>
	<body>
		<script type="text/javascript">
		$(document).ready(function () {
			console.log("{{user}}")
			console.log($("input[type=checkbox]:checked").length)
			$('#login-btn').click(function() {
				console.log($("input[name=answer]").val())
				console.log($("input[type=answercon]").val())
				if(($("input[name=answer]").val() != $("input[name=answercon]").val()) || ($("input[name=answer]").val() == '' || $("input[name=answer]").val() == '')) {
					$("p.error-msg").html("Make sure both fields are filled out and have the same answer!")
				}
				else {
					$(event.currentTarget).closest('body').find('.off-session-form').submit()
				}
			});
		});

		</script>

		<div class="background"></div>
		
		<div class="container off-session-container">
			<form action="/checkforquestion4" method="POST" class="off-session-form">
				{{!Carrying values over}}
				<input type="hidden" value="{{user}}" name="user">
				<input type="hidden" value="{{pass}}" name="pass">
				<input type="hidden" value="{{con}}" name="con">
				<input type="hidden" value="{{email}}" name="email">
				
				{{!Questions}}
				<input type="hidden" value="{{questions.0.question}}" name="questions[]">
				<input type="hidden" value="{{questions.1.question}}" name="questions[]">
				<input type="hidden" value="{{questions.2.question}}" name="questions[]">
				<input type="hidden" value="{{questions.0.answer}}" name="answers[]">
				<input type="hidden" value="{{questions.1.answer}}" name="answers[]">
				{{#if questions.3.question}}
					<input type="hidden" value="{{questions.3.question}}" name="questions[]">
					<input type="hidden" value="1" name="question3flag">
				{{/if}}

				<img src="IMAGES/AutoWork.png" alt="logo" id="logo">
				<p class="error-msg">{{error_msg}}</p>
				<p class="off-session-title"><h2>SIGN-UP</h2></p><br>
				Security Questions #3<br>
				{{questions.2.question}}<br><br>
				<input type="text" name="answer" placeholder="Enter Here" required><br>
				<input type="text" name="answercon" placeholder="Confirm Answer" required><br>
				<div>
					<button type="button" class="global-button" id="login-btn">SUBMIT</button>
				</div>
			</form>
		</div>

        <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
        <script src="JS/script.js"></script>
    </body>
</html>