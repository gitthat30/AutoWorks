<!DOCTYPE html>
<html>
	<head>
		<title>AutoWorks</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="CSS/global.css">
		<link rel="stylesheet" href="CSS/offSession.css">
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.0/jquery.min.js"></script>
	</head>

	<script>
		function secQuestion() {
			console.log($(event.currentTarget).closest('body').find('.security').submit());
		}
		function OTP() {
			console.log($(event.currentTarget).closest('body').find('.OTP').submit());;
		}
	</script>

	<body>
		<form action="/answer1" method="POST" class="security">
			<input type="hidden" name="userid" value="{{userid}}">
			<input type="hidden" name="method" value="secquestion">
		</form>
		<form action="/otprecovery" method="POST" class="OTP">
			<input type="hidden" name="userid" value="{{userid}}">
			<input type="hidden" name="method" value="OTP">
		</form>
		
		<div class="background"></div>
		
		<div class="container off-session-container">
			<form action="/" method="POST" class="off-session-form">
				<img src="IMAGES/AutoWork.png" alt="logo" id="logo">
				<p class="error-msg">{{error_msg}}</p>
				<a href="/login" class="off-session-back">< BACK</a><br><br>
				<p class="off-session-title">Recover Password</p><br>
				<div>
					<button type="button" class="recovery-btn" onclick="secQuestion()">Security Question</button> <br>
					<button type="button" class="recovery-btn" onclick="OTP()">OTP</button>
				</div>
			</form>
		</div>

        <script src="https://code.jquery.com/jquery-3.4.1.min.js" type="text/javascript"></script>
        <script src="JS/script.js"></script>
    </body>
</html>